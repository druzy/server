<project default="jar">

<property name="src.dir" value="."/>
<property name="bin.dir" value="bin"/>
<property name="jar.dir" value="jar"/>
<property name="classpath.dir" value="/usr/lib/java/"/>
<property name="version" value="1"/>
	
<path id="class.path">
	<fileset dir="${classpath.dir}">
		<include name="**/*.jar"/>
	</fileset>
</path>
	
<target name="clean">
	<delete dir="${bin.dir}"/>
	<delete dir="${jar.dir}"/>
	<echo message="Nettoyage terminé"/>
</target>

<target name="compile" depends="clean" classpathref="class.path">
	 
	<mkdir dir="${bin.dir}"/>
	<javac srcdir="${src.dir}" destdir="${bin.dir}"/>
	<echo message="Compilation terminée"/>
</target>

<target name="jar" depends="compile">
	<mkdir dir="${jar.dir}"/>
	<jar destfile="${jar.dir}/server-${version}.jar" basedir="${bin.dir}"/>
	<echo message="Création du fichier Jar terminée"/>
</target>

</project>
